<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" type="text/css" href="/css/pokemon.css"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
</head>
<body>

{{#pokemon}}
        <p id="generacion-pokemon">{{generation}}</p>
        <p id="tipo-pokemon">{{type1}}</p>
        <input type="checkbox" name="legendario" id="check-legendario" />
        <p hidden id="legendario-pokemon">{{is_legendary}}</p>
        <p id="nombre-pokemon">{{name}}</p>
        <p id="pokedex-pokemon">{{pokedex_number}}</p>
        <p id="salud-pokemon">{{hp}}</p>
        <p id="altura-pokemon">{{height_m}}</p>
        <p id="peso-pokemon">{{weight_kg}}</p>
        <p id="ataque-pokemon">{{sp_attack}}</p>
        <p id="defensa-pokemon">{{sp_defense}}</p>
        <p id="velocidad-pokemon">{{speed}}</p>
        <input type="button" onclick="location.href='http://127.0.0.1:8080/';" id="boton-home"/>

        <input type="button" onclick="location.href='http://127.0.0.1:8080/borrarPokemon?name={{name}}';" id="boton-borrar"/>
        <img src="../imagenesPokemon/{{pokedex_number}}.png" alt="Pokemon" id="imagen-pokemon"> 
{{/pokemon}}

<script>
    var legendario = document.getElementById("legendario-pokemon").innerHTML;
    var legenString = legendario.toString();
    var botonBorrar = document.getElementById("boton-borrar");
    console.log("Esto es: " + legenString);

    if(legendario == "0"){
        document.getElementById("check-legendario").checked = false;
    }else{
        document.getElementById("check-legendario").checked = true;
    }
    
    
</script>

</body>
</html>